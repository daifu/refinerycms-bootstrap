<%= render '/refinery/admin/search', :url => refinery.admin_images_path %>
    <% icon_lookup = {:list => "list", :grid => "th-large"} %>
<div class="btn-group btn-group-vertical btn-block">
    <%= link_to raw('<i class="icon-upload icon-white"></i> ') << t('.create_new_image'), refinery.new_admin_image_path(:dialog => true),
                :class => "btn btn-large btn-info" %>
    <% other_image_views.each do |image_view| %>
      <%= link_to raw('<i class="icon-' << icon_lookup[image_view] << ' icon-white"></i> ') << t('switch_to', :scope => 'refinery.admin.images.index.view', :view_name => t("#{image_view}", :scope => 'refinery.admin.images.index.view')), refinery.admin_images_path(:view => image_view, :page => params[:page]),
                :class => "btn btn-large btn-info" %>
  <% end %>
</div>
